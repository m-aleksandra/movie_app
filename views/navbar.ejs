
<nav class="navbar navbar-expand-lg mb-3 sticky-top" style="background-color: #2d2c2c;">
  <div class="container-fluid ">
      <a href="/" class="navbar-brand d-flex align-items-center">
          <img src="/images/logo2.png" alt="logo" class="rounded-circle shadow-1-strong me-3" width="60" height="60">
          <span style="color: #fff; font-weight: 500; font-size: 1.5rem;">Top Movies</span>
      </a>
      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" 
          placeholder="Search" aria-label="Search"
          id="search-box" style="width: 300px;">
        <div id="search-results" class="position-absolute bg-light shadow mt-2"
          style="width: 400px; max-height: 200px; overflow-y: auto;"></div>
      </form>
      
      <% if (user) { %>
        <div class="d-flex flex-start align-items-center">
          <h6 class="fw-bold mb-1 me-2 text-white"><%= user.username %></h6>
          <div class="dropdown">
              <img class="rounded-circle shadow-1-strong dropdown-toggle" style="cursor: pointer;"
                src="<%= user.profile %>" alt="avatar" 
                width="60" height="60" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <div class="dropdown-menu custom-dropdown-menu" aria-labelledby="dropdownMenuButton">

                <form action="/logout" method="POST">
                  <button type="submit" style="border: none; background: none;" class="p-2">
                    Logout
                  </button>
                </form>
                  <a class="dropdown-item p-2" href="/profile">Edit profile</a>
              </div>
          </div>
      </div>
      <% } else { %>
          <a href="/login" class="btn btn-primary">Login</a>
      <% } %>
  </div>
</nav>

<% if (messages.error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= messages.error %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% } %>
